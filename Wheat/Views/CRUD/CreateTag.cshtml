@model Tag

<form method="post" asp-action="CreateTag">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Tag</h2> <hr/>
		</div>
		<div class="mb-3">
			<label asp-for="TagName">Tag Name</label>
			<input asp-for="TagName" class="form-control" />
			<span asp-validation-for="TagName" class="text-danger"></span><br />
		</div>
		<div class="mb-3">
			<label asp-for="TagDescr">Tag Description</label>
			<input asp-for="TagDescr" class="form-control" />
			<span asp-validation-for="TagDescr" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="CRUD" asp-action="RevTags" class="btn btn-secondary" style="width:150px">
			Back to Tags List
		</a>
	</div>
</form>

@section Scripts {
	@{<partial name="_ValidationScriptsPartial" />}
}
