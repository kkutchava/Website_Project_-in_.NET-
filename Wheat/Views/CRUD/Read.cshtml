@using Wheat.Models
@model dynamic

<form method="post" asp-action="Read">
	<input  hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">@Model.Posts.PostTitle</h2> <hr/>
		</div>
		<div class="mb-4 border-1">
			@Model.Posts.PostBody
		</div>
		<div class="mb-3">
			<label class="fw-bold">Tags:</label>
			<div>
				@foreach(var tg in @Model.Tags) {
					<var>#</var>
					@tg.TagName
					<var>&nbsp</var>

				}
			</div>
		</div>
		<a asp-controller="CRUD" asp-action="Index" class="btn btn-primary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts {
	@{<partial name="_ValidationScriptsPartial" />}
}